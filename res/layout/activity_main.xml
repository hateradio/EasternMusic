<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/btnBamboo"
        android:src="@drawable/band" />

    <Button
        android:id="@+id/btnBamboo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/btnBamboo"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:contentDescription="@string/btnPalace"
        android:src="@drawable/drums" />

    <Button
        android:id="@+id/btnPalace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPalace"
        android:textSize="22sp" />

</LinearLayout>